{
  "name": "memex-racing-game",
  "version": "0.1.0",
  "description": "A chaotic multiplayer racing betting game with retro pixel art style",
  "main": "src/index.js",
  "scripts": {
    "start": "sh start-game.sh || start-game.bat",
    "start:local": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "server": "cd src/server && node index.js",
    "server:dev": "cd src/server && node --watch index.js",
    "server:debug": "cd src/server && node --inspect index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='tests/(?!e2e).*\\.test\\.js$'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,md}\"",
    "clean": "rm -rf dist coverage",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "deploy:vercel": "vercel",
    "deploy:vercel:prod": "vercel --prod",
    "deploy:setup": "node scripts/setup-serverless.js",
    "build:serverless": "webpack --mode production --config webpack.serverless.js"
  },
  "keywords": [
    "game",
    "racing",
    "betting",
    "multiplayer",
    "phaser",
    "pixel-art"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.54.2",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "fake-indexeddb": "^6.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "ably": "^1.2.48",
    "bcrypt": "^6.0.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.7",
    "obs-websocket-js": "^5.0.3",
    "phaser": "^3.60.0",
    "process": "^0.11.10",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-canvas-mock",
      "<rootDir>/tests/setup/test-environment.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "^@engine/(.*)$": "<rootDir>/src/game/engine/$1",
      "^@systems/(.*)$": "<rootDir>/src/game/systems/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@ui/(.*)$": "<rootDir>/src/ui/$1",
      "^@auth/(.*)$": "<rootDir>/src/auth/$1",
      "^.*/animations/AnimationManager$": "<rootDir>/tests/__mocks__/animationManager.js",
      "^.*/animations$": "<rootDir>/tests/__mocks__/animationManager.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/src/**/__tests__/**/*.test.js",
      "!<rootDir>/tests/e2e/**/*"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.config.js",
      "!src/**/*.demo.js",
      "!src/server/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "maxWorkers": "50%"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
