# Production Environment Configuration for Memex Racing Game
# This file contains production-specific defaults
# Override with actual environment variables in deployment

# Application Configuration
NODE_ENV=production

# Security Configuration - MUST be overridden with secure values
# JWT_SECRET=OVERRIDE_WITH_SECURE_SECRET_IN_DEPLOYMENT

# Server Configuration - Override with actual production URLs
# REACT_APP_SERVER_URL=https://your-production-domain.com

# Game Configuration
REACT_APP_GAME_VERSION=0.1.0
REACT_APP_DEBUG_MODE=false

# Database Configuration - Override with actual production database
# DATABASE_URL=postgresql://prod_user:secure_password@prod_host:5432/memex_racing_prod

# Performance Configuration (optimized for production)
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Production Security Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
COOKIE_HTTP_ONLY=true

# Rate Limiting (stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100