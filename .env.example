# Memex Racing Game - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Application Configuration
NODE_ENV=development
PORT=3001

# Security Configuration - CRITICAL: Change JWT_SECRET in production
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-32-characters-minimum-required

# CORS Configuration - SECURITY CRITICAL
# Comma-separated list of allowed origins for production
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Server Configuration
REACT_APP_SERVER_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:3001

# Game Configuration
REACT_APP_GAME_VERSION=0.1.0
REACT_APP_DEBUG_MODE=true

# Database Configuration
# DATABASE_URL=postgresql://username:password@localhost:5432/memex_racing

# Security & Performance Configuration
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Production-specific variables (only needed in production)
# NODE_ENV=production
# DATABASE_URL=postgresql://prod_user:secure_password@prod_host:5432/memex_racing_prod
# REACT_APP_SERVER_URL=https://your-production-domain.com
# CLIENT_URL=https://your-production-domain.com
# WEBSOCKET_URL=wss://your-production-domain.com
# ALLOWED_ORIGINS=https://your-production-domain.com,https://admin.your-domain.com
# REACT_APP_DEBUG_MODE=false